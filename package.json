{
  "name": "@lindorm-io/koa-jwt",
  "description": "JWT and JWKS middleware for @lindorm-io/koa applications",
  "version": "0.2.2",
  "license": "ISC",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git@github.com:lindorm-io/koa-jwt.git"
  },
  "bugs": {
    "url": "https://github.com/lindorm-io/koa-jwt/issues"
  },
  "author": "Jonn Nilsson",
  "maintainers": [
    "jonn@jonn.nu"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "concurrently 'rimraf coverage' 'rimraf dist'",
    "coverage": "jest --coverage --forceExit",
    "lint": "eslint --ext .ts ./src/",
    "lint:fix": "eslint --ext .ts ./src/ --fix",
    "postversion": "git push --no-verify && git push --tags --no-verify",
    "prepublishOnly": "npm run clean && concurrently 'npm run build' 'npm run coverage'",
    "preversion": "npm run validate",
    "publish:patch": "npm version patch && npm publish",
    "publish:minor": "npm version minor && npm publish",
    "publish:major": "npm version major && npm publish",
    "test": "jest --config jest.config.js --forceExit",
    "test:clear": "jest --clearCache",
    "test:watch": "jest --config jest.config.js --watch --",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "update": "ncu -u && npm install",
    "validate": "npm run test:clear && npm run lint && npm run typecheck && npm run test"
  },
  "dependencies": {
    "@lindorm-io/core": "0.2.0",
    "@lindorm-io/errors": "0.0.1"
  },
  "peerDependencies": {
    "@lindorm-io/jwt": ">=0.2.0",
    "@lindorm-io/key-pair": ">=0.1.3",
    "@lindorm-io/koa": ">=0.1.7"
  },
  "devDependencies": {
    "@lindorm-io/jwt": "^0.1.6",
    "@lindorm-io/key-pair": "^0.1.3",
    "@lindorm-io/koa": "^0.1.7",
    "@lindorm-io/winston": "^0.1.3",
    "@types/jest": "^26.0.22",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/koa": "^2.13.1",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-router": "^7.4.1",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.36",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "koa": ">=2.13.1",
    "lint-staged": "^10.5.4",
    "mockdate": "^3.0.5",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
